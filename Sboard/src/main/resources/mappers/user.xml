<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.sboard.dao.UserDao">

	<insert id="insertUser">
		INSERT INTO `JBOARD_MEMBER` SET
		`uid`=#{uid}, 
		`pass`=PASSWORD(#{pass1}), 
		`name`=#{name}, 
		`nick`=#{nick}, 
		`email`=#{email}, 
		`hp`=#{hp}, 
		`zip`=#{zip}, 
		`addr1`=#{addr1}, 
		`addr2`=#{addr2}, 
		`regip`=#{regip},
		`rdate`=NOW();		  
	</insert>
	
	<select id="selectTerms" resultType="kr.co.sboard.vo.TermsVo">
		SELECT * FROM `JBOARD_TERMS`;
	</select>
	
	<select id="selectUser" resultType="kr.co.sboard.vo.UserVo">
		SELECT * FROM `JBOARD_MEMBER` WHERE `uid`=#{uid} AND `pass`=PASSWORD(#{pass});
	</select>
		
	<select id="selectUsers" resultType="kr.co.sboard.vo.UserVo">
		SELECT * FROM `Employee`;
	</select>
	
	<delete id="deleteUser">
		DELETE FROM `Employee` WHERE `uid`=#{uid};
	</delete>
	
	<update id="updateUser">
		UPDATE `Employee` SET
		`name`=#{name},
		`hp`=#{hp},
		`pos`=#{pos},
		`dep`=#{dep}		
		WHERE `uid`=#{uid};
	</update>
	
	<select id="selectCountUid" resultType="int">
		SELECT COUNT(*) FROM `JBOARD_MEMBER` WHERE `uid`=#{uid};
	</select>
	

</mapper>